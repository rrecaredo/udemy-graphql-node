{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "es6"
      ],
      "module": "commonjs",
      "rootDir": "server",
      "outDir": "dist",
      "removeComments": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true ,
      "strict": true,
      "skipLibCheck": true
    },
    "compileOnSave": false,
    "include": ["./server/**/*.ts"],
    "exclude": ["node_modules"]
  }